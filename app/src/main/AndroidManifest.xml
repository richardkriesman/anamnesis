<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.team4.anamnesis">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activity.home.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/settings_title"
            android:parentActivityName=".activity.home.HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.team4.anamnesis.activity.home.HomeActivity" />
        </activity>
        <activity
            android:name=".activity.group.GroupActivity"
            android:label="@string/title_activity_group"
            android:parentActivityName=".activity.home.HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.team4.anamnesis.activity.home.HomeActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
        <activity
            android:name=".activity.studyMode.StudyModeActivity"
            android:parentActivityName=".activity.group.GroupActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.team4.anamnesis.activity.group.GroupActivity" />
        </activity>
    </application>

</manifest>