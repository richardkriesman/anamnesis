<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.settings.SettingsActivity">

    <LinearLayout
        android:id="@+id/settings__font_size"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_weight="0"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings__font_size"
            android:textAppearance="@style/AppTheme.Widget.ListItem" />

        <TextView
            android:id="@+id/settings__font_size__subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/AppTheme.Widget.ListItem.Secondary" />
    </LinearLayout>

    <Switch
        android:id="@+id/settings__animations"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="0"
        android:background="?android:attr/selectableItemBackground"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/settings__animations"
        android:textAppearance="@style/AppTheme.Widget.ListItem" />

</LinearLayout>